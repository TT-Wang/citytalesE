/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.shimmer {
  animation: dim .75s ease-in-out infinite;
}

@keyframes dim {
  0% { opacity: 1}
  50% { opacity: 0.5}
  100% { opacity: 1}
}
