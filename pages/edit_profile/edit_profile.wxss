.page__container {
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F9F8F4;
  min-height: 100vh;
}

.form-flexbox {
  height: 100rpx;
  width: 95%;
  margin: 20rpx 0;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color:white;
  font-weight: lighter;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.input {
  text-align: right;
  width: 70%;
}

.title {
  width: 30%;
}

.edit-btn {
  width: 55%;
  height: 6vh;
  margin: 20rpx auto;
  background-color:#04B2D9;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}